@model ICollection<Order>
@{
    ViewBag.Title = "Orders";
}
<h2>@ViewBag.Title</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Number of tokens</th>
            <th scope="col">Price</th>
            <th scope="col">State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.NumTokens</td>
                <td>@order.Price</td>
                <td>@order.State</td>
            </tr>
        }
    </tbody>
</table>